# Set default behavior for all files
* text=auto

# Force specific files to use LF (common for code files)
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files should not be modified
*.png binary
*.jpg binary
*.gif binary
*.pdf binary
*.ico binary
*.zip binary
*.exe binary
*.dll binary
*.bin binary